<div class="app-content content">
  <div class="content-overlay"></div>
  <div class="header-navbar-shadow"></div>
  <div class="content-wrapper container-xxl p-0">
    <div class="content-body">
      <div class="row" id="table-bordered">
        <div class="col-12">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h4 class="card-title">Itineraries</h4>
            </div>

            <div class="card-body">
              <div class="table-responsive card card-company-table">
                <table class="table" id="itineraryTable">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>User</th>
                      <th>Destination</th>
                      <th>Start Date</th>
                      <th>End Date</th>
                      <th>Notes</th>
                      <th>Status</th>
                      <th>Created At</th>
                    </tr>
                  </thead>
                  <tbody></tbody>
                </table>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    var table = $('#itineraryTable').DataTable({
      processing: true,
      serverSide: true,
      ajax: {
        url: '/admin/itineraries/data',
        type: 'POST',
        contentType: 'application/json',
        data: function(d) {
          return JSON.stringify(d);

        }
      },
      
      columns: [
        {
          data: null,
          render: function(data, type, row, meta) {
            return meta.settings._iDisplayStart + meta.row + 1;
          },
          searchable: false
        },
        { data: 'user', defaultContent: '-' },   // later you can populate with user name using populate
        { data: 'destination' },
        { 
          data: 'startDate',
          render: d => new Date(d).toLocaleDateString()
        },
        { 
          data: 'endDate',
          render: d => new Date(d).toLocaleDateString()
        },
        { data: 'notes' },
        { 
          data: 'status',
          render: s => `<span class="badge bg-${s === 'pending' ? 'warning' : 'success'}">${s}</span>`
        },
        { 
          data: 'createdAt',
          render: d => new Date(d).toLocaleString()
        }
      ],
      drawCallback: function(settings) {
        feather.replace();
      }
    });
  });
</script>
