<div class="app-content content">
  <div class="content-overlay"></div>
  <div class="header-navbar-shadow"></div>
  <div class="content-wrapper container-xxl p-0">
    <div class="content-header row"></div>
    <div class="content-body">
      <!-- Table start -->
      <div class="row" id="table-bordered">
        <div class="col-12">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h2></h2>
              <a href="/admin/plans/create" class="btn btn-primary">Create Subscription</a>
            </div>

            <div class="card-body">
              <div class="table-responsive card card-company-table">
                <table class="table" id="plansTable">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Plan Name</th>
                      <th>Amount</th>
                      <th>Free</th>
                      <th>Status</th>
                      <!-- <th>Hostel Limit</th>
                      <th>Guide Limit</th>
                      <th>Rental Limit</th>
                      <th>Cafe Limit</th> -->
                      <th>Buddy Scroll Limit</th>
                      <th>Circle Limit</th>
                      <th>Itinerary Limit</th>
                      <th>Created At</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deletePlanModal" tabindex="-1" aria-labelledby="deletePlanModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Plan</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete <strong id="deletePlanName"></strong>?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" id="confirmDeletePlan" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    // Initialize DataTable
    var table = $('#plansTable').DataTable({
      columnDefs: [{ orderable: false, targets: -1 }],
      processing: true,
      serverSide: true,
      ajax: {
        url: '/admin/plans/data',
        type: 'POST',
        contentType: 'application/json',
        data: function(d) {
          return JSON.stringify(d);
        }
      },
      columns: [
        {
          data: null,
          render: function(data, type, row, meta) {
            return meta.settings._iDisplayStart + meta.row + 1;
          },
          searchable: false
        },
        { data: 'plan_name' },
        { data: 'amount' },
        { data: 'is_free' },
        { data: 'status' },
        // { data: 'hostel_limit' },
        // { data: 'guide_limit' },
        // { data: 'rental_limit' },
        // { data: 'cafe_limit' },
        { data: 'buddy_scroll_limit' },
        { data: 'circle_limit' },
        { data: 'itinerary_limit' },
        { data: 'createdAt' },
        { data: 'action' }
      ],
      drawCallback: function(settings) {
        feather.replace(); // replace icons
      }
    });

    // Delete Plan
    let deletePlanId = null;
    $(document).on("click", ".delete-plan", function() {
      deletePlanId = $(this).data("id");
      let planName = $(this).data("name");
      $("#deletePlanName").text(planName);
      $("#deletePlanModal").modal("show");
    });

    $("#confirmDeletePlan").on("click", function() {
      if (!deletePlanId) return;

      $.ajax({
        url: "/admin/plans/" + deletePlanId,
        type: "DELETE",
        success: function(response) {
          $("#deletePlanModal").modal("hide");
          table.ajax.reload();
          showSuccessToast("Plan deleted successfully!");
        },
        error: function(err) {
          $("#deletePlanModal").modal("hide");
          showErrorToast("Failed to delete Plan!");
        }
      });
    });
  });
</script>
