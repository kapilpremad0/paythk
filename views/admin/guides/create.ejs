<div class="app-content content">
  <div class="content-overlay"></div>
  <div class="header-navbar-shadow"></div>
  <div class="content-wrapper container-xxl p-0">
    <div class="content-header row"></div>
    <div class="content-body">

      <div class="col-xl-12 col-lg-12">
        <form id="submitForm" method="post" enctype="multipart/form-data">
          <!-- hidden field to detect edit mode -->
          <input type="hidden" id="guide_id" name="guide_id" value="<%= guide ? guide._id : '' %>">

          <div class="card">
            <div class="card-header">
              <h3><%= guide ? 'Edit Guide' : 'Create Guide' %></h3>
            </div>
            <div class="card-body">
              <div class="row">

                <!-- guide Name -->
                <div class="mb-1 col-md-6">
                  <label for="name">Guide Name</label>
                  <input type="text" class="form-control" id="name" name="name" value="<%= guide ? guide.name : '' %>" placeholder="Enter guide name" required />
                  <div id="name-submit_errors" class="validation-error"></div>
                </div>

                <div class="mb-1 col-md-6">
                  <label for="profile">Profile Image</label>
                  <input type="file" class="form-control" id="profile" name="profile" />
                  <% if (guide && guide.profile_url) { %>
                  <img src="<%= guide.profile_url %>" alt="Profile" width="50" class="mt-1 rounded" />
                  <% } %>
                  <div id="profile-submit_errors" class="validation-error"></div>
                </div>

                <!-- Location -->
                <div class="mb-1 col-md-6">
                  <label for="location">Select Location</label>
                  <select name="location" class="form-select select2">
                    <option value="">-- Select Location --</option>
                    <% locations.forEach(loc => { %>
                    <option value="<%= loc._id %>" <%= guide && guide.location && guide.location.toString() === loc._id.toString() ? 'selected' : '' %>>

                      <%= loc.city %>,
                      <%= loc.state %></option>
                    <% }) %>
                  </select>
                  <div id="location-submit_errors" class="validation-error"></div>
                </div>


                <div class="mb-1 col-md-6">
                  <label for="languages">Languages Spoken</label>
                  <select name="languages[]" id="languages" class="form-select select2" multiple>
                    <% languages.forEach(lang => { %>
                    <option value="<%= lang %>" <%= guide && guide.languages && guide.languages.includes(lang) ? 'selected' : '' %>>
                      <%= lang %>
                    </option>
                    <% }) %>
                  </select>
                  <div id="languages-submit_errors" class="validation-error"></div>
                </div>

                <!-- Address -->
                <div class="mb-1 col-md-12">
                  <label for="address">Address</label>
                  <textarea class="form-control" id="address" name="address" rows="2" placeholder="Enter full address"><%= guide ? guide.address : '' %></textarea>
                </div>

                <!-- Terms -->
                <div class="mb-1 col-md-12">
                  <label for="terms">Terms & Conditions</label>
                  <textarea class="form-control" id="terms" name="terms" rows="3" placeholder="Enter terms & conditions"><%= guide ? guide.terms : '' %></textarea>
                </div>

                <div class="mb-1 col-md-6">
                  <label for="contactPerson">Contact Person</label>
                  <input type="text" class="form-control" id="contactPerson" name="contactPerson" value="<%= guide ? guide.contactPerson : '' %>" placeholder="Enter contact person" />
                  <div id="contactPerson-submit_errors" class="validation-error"></div>
                </div>

                <div class="mb-1 col-md-6">
                  <label for="contactNumber">Contact Number</label>
                  <input type="text" class="form-control" id="contactNumber" name="contactNumber" value="<%= guide ? guide.contactNumber : '' %>" placeholder="Enter contact number" />
                  <div id="contactNumber-submit_errors" class="validation-error"></div>
                </div>

                <div class="mb-1 col-md-6">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="email" name="email" value="<%= guide ? guide.email : '' %>" placeholder="Enter email address" />
                  <div id="email-submit_errors" class="validation-error"></div>
                </div>

                <div class="mb-1 col-md-6">
                  <label for="images">Images</label>
                  <input type="file" class="form-control" id="images" name="images" multiple />
                  <% if (guide && guide.images && guide.images.length > 0) { %>
                  <% guide.imageUrls.forEach(img => { %>
                  <img src="<%= img %>" alt="Image" width="50" class="mt-1 rounded" />
                  <% }) %>
                  <% } %>
                  <div id="images-submit_errors" class="validation-error"></div>
                </div>


                <!-- Description -->
                <div class="mb-3 col-md-12">
                  <label for="description">Description</label>
                  <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter description"><%= guide ? guide.description : '' %></textarea>
                </div>

                <div class="mb-2 ">
                  <h4>Availability (Monday - Sunday)</h4>
                </div>

                <table class="table table-bordered" id="availability-table">
                  <thead>
                    <tr>
                      <th>Day</th>
                      <th>Status</th>
                      <th>Open Time</th>
                      <th>Close Time</th>
                      <th>Price</th>
                      <!-- <th>Late Fees</th> -->
                    </tr>
                  </thead>
                  <tbody>
                    <% ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"].forEach((day, i) => { 
        let av = availabilities ? availabilities.find(a => a.day === day) : null; 
    %>
                    <tr>
                      <td>
                        <%= day %>
                        <input type="hidden" name="availability[<%= i %>][day]" value="<%= day %>" />
                      </td>
                      <td>
                        <div class="form-check form-check-primary form-switch">
                          <input type="checkbox" name="availability[<%= i %>][status]" class="form-check-input" value="active" <%= av && av.status === 'active' ? 'checked' : '' %>>
                        </div>
                      </td>
                      <td>
                        <input type="time" class="form-control" name="availability[<%= i %>][open_time]" value="<%= av ? av.open_time : '' %>" />
                      </td>
                      <td>
                        <input type="time" class="form-control" name="availability[<%= i %>][close_time]" value="<%= av ? av.close_time : '' %>" />
                      </td>
                      <td>
                        <input type="number" class="form-control" name="availability[<%= i %>][price]" value="<%= av ? av.price : '' %>" />
                      </td>
                      <!-- <td>
        <input type="number" class="form-control" name="availability[<%= i %>][late_fees]" value="<%= av ? av.late_fees : '' %>" />
      </td> -->
                    </tr>
                    <% }) %>
                  </tbody>
                </table>



                <div class="mb-2">
                  <!-- Submit -->
                  <button type="submit" class="btn btn-primary mt-3">
                    <%= guide ? 'Update guide' : 'Save guide' %>
                  </button>
                </div>



              </div>
            </div>
          </div>





        </form>

      </div>

    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#submitForm').on('submit', function(e) {
      e.preventDefault();
      $('.validation-error').text('');

      const formData = new FormData(this);
      const guideId = $('#guide_id').val();

      let url = '/admin/guides';
      let method = 'POST';

      if (guideId) { // editing
        url = '/admin/guides/' + guideId;
        method = 'PUT';
      }
      $('#form-loader').show();

      $.ajax({
        url: url,
        method: method,
        data: formData,
        processData: false,
        contentType: false,
        success: function(response) {
          $('#form-loader').hide();
          window.location.href = '/admin/guides'; // redirect after save
        },
        error: function(res) {
          $('#form-loader').hide();
          if (res.status == 400 || res.status == 422) {
            if (res.responseJSON && res.responseJSON.errors) {
              var error = res.responseJSON.errors;
              $.each(error, function(key, value) {
                $("#" + key + "-submit_errors").text(value);
              });
            }
          }
          if (res.status == 500) {
            showErrorToast(res.responseJSON.error);
          }
          if (res.status == 404) {
            showErrorToast('Something went wrong');
          }
        }
      });
    });
  });
</script>