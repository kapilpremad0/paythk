<div class="app-content content">
  <div class="content-overlay"></div>
  <div class="header-navbar-shadow"></div>
  <div class="content-wrapper container-xxl p-0">
    <div class="content-header row">
      <div class="content-header-right text-md-end col-md-3 col-12 d-md-block d-none"></div>
    </div>
    <div class="content-body">
      <!-- Bordered table start -->
      <div class="row" id="table-bordered">
        <div class="col-12">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <!-- City Filter -->
              <div>
                <label for="cityFilter" class="form-label">Filter by City</label>
                <select id="cityFilter" class="form-select">
                  <option value="">All</option>
                  <option value="Mumbai">Mumbai</option>
                  <option value="Delhi">Delhi</option>
                  <option value="Bangalore">Bangalore</option>
                </select>
              </div>

              <a href="<%= '/admin/hostels/create' %>" class="btn btn-primary">Create Hostel</a>
            </div>

            <div class="card-body">
              <div class="table-responsive card card-company-table">
                <table class="table" id="hostelsTable">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Partner</th>
                      <th>Hostel Name</th>
                      <th>City</th>
                      <th>State</th>
                      <th>Address</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteHostelModal" tabindex="-1" aria-labelledby="deleteHostelModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Hostel</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete <strong id="deleteHostelName"></strong>?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" id="confirmDeleteHostel" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    // Initialize DataTable
    var table = $('#hostelsTable').DataTable({
      columnDefs: [{ orderable: false, targets: -1 }],
      processing: true,
      serverSide: true,
      ajax: {
        url: '/admin/hostels/data',
        type: 'POST',
        contentType: 'application/json',
        data: function(d) {
          const city = $('#cityFilter').val();
          if (city) d.city = city;
          return JSON.stringify(d);
        }
      },
      columns: [
        {
          data: null,
          render: function(data, type, row, meta) {
            return meta.settings._iDisplayStart + meta.row + 1;
          },
          searchable: false
        },
        { data: 'partner_div' },
        { data: 'name' },
        { data: 'city', render: data => data ? data.toUpperCase() : '' },
        { data: 'state', render: data => data ? data.toUpperCase() : '' },
        { data: 'address', render: data => data ? `${data}` : '' },
        { data: 'action' }
      ],
      drawCallback: function(settings) {
        feather.replace(); // replace icons
      }
    });

    // Reload table when filter changes
    $('#cityFilter').on('change', function() {
      table.ajax.reload();
    });

    // Delete Hostel
    let deleteHostelId = null;

    $(document).on("click", ".delete-hostel", function() {
      deleteHostelId = $(this).data("id");
      let hostelName = $(this).data("name");
      $("#deleteHostelName").text(hostelName);
      $("#deleteHostelModal").modal("show");
    });

    $("#confirmDeleteHostel").on("click", function() {
      if (!deleteHostelId) return;

      $.ajax({
        url: "/admin/hostels/" + deleteHostelId,
        type: "DELETE",
        success: function(response) {
          $("#deleteHostelModal").modal("hide");
          table.ajax.reload();
          showSuccessToast("Hostel deleted successfully!");
        },
        error: function(err) {
          $("#deleteHostelModal").modal("hide");
          showErrorToast("Failed to delete hostel!");
        }
      });
    });
  });
</script>
