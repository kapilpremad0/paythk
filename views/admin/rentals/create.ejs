<div class="app-content content">
  <div class="content-overlay"></div>
  <div class="header-navbar-shadow"></div>
  <div class="content-wrapper container-xxl p-0">
    <div class="content-header row"></div>
    <div class="content-body">

      <div class="col-xl-12 col-lg-12">
        <form id="submitForm" method="post" enctype="multipart/form-data">
          <!-- hidden field to detect edit mode -->
          <input type="hidden" id="rental_id" name="rental_id" value="<%= rental ? rental._id : '' %>">

          <div class="card">
            <div class="card-header">
              <h3><%= rental ? 'Edit Rental' : 'Create Rental' %></h3>
            </div>
            <div class="card-body">
              <div class="row">

                <!-- Rental Name -->
                <div class="mb-1 col-md-6">
                  <label for="name">Rental Name</label>
                  <input type="text" class="form-control" id="name" name="name" value="<%= rental ? rental.name : '' %>" placeholder="Enter rental name" required />
                  <div id="name-submit_errors" class="validation-error"></div>
                </div>

                <!-- Location -->
                <div class="mb-1 col-md-6">
                  <label for="location">Select Location</label>
                  <select name="location" class="form-select select2">
                    <option value="">-- Select Location --</option>
                    <% locations.forEach(loc => { %>
                    <option value="<%= loc._id %>" <%= rental && rental.location && rental.location.toString() === loc._id.toString() ? 'selected' : '' %>>

                      <%= loc.city %>,
                      <%= loc.state %></option>
                    <% }) %>
                  </select>
                  <div id="location-submit_errors" class="validation-error"></div>
                </div>

                <!-- Address -->
                <div class="mb-1 col-md-12">
                  <label for="address">Address</label>
                  <textarea class="form-control" id="address" name="address" rows="2" placeholder="Enter full address"><%= rental ? rental.address : '' %></textarea>
                </div>

                <!-- Terms -->
                <div class="mb-1 col-md-12">
                  <label for="terms">Terms & Conditions</label>
                  <textarea class="form-control" id="terms" name="terms" rows="3" placeholder="Enter terms & conditions"><%= rental ? rental.terms : '' %></textarea>
                </div>

                <div class="mb-1 col-md-6">
                  <label for="contactPerson">Contact Person</label>
                  <input type="text" class="form-control" id="contactPerson" name="contactPerson" value="<%= rental ? rental.contactPerson : '' %>" placeholder="Enter contact person" />
                  <div id="contactPerson-submit_errors" class="validation-error"></div>
                </div>

                <div class="mb-1 col-md-6">
                  <label for="contactNumber">Contact Number</label>
                  <input type="text" class="form-control" id="contactNumber" name="contactNumber" value="<%= rental ? rental.contactNumber : '' %>" placeholder="Enter contact number" />
                  <div id="contactNumber-submit_errors" class="validation-error"></div>
                </div>

                <div class="mb-1 col-md-6">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="email" name="email" value="<%= rental ? rental.email : '' %>" placeholder="Enter email address" />
                  <div id="email-submit_errors" class="validation-error"></div>
                </div>

                <div class="mb-1 col-md-6">
                  <label for="website">Website</label>
                  <input type="text" class="form-control" id="website" name="website" value="<%= rental ? rental.website : '' %>" placeholder="Enter website URL" />
                  <div id="website-submit_errors" class="validation-error"></div>
                </div>

                <div class="mb-1 col-md-6">
                  <label for="images">Images</label>
                  <input type="file" class="form-control" id="images" name="images" multiple />
                  <% if (rental && rental.images && rental.images.length > 0) { %>
                  <% rental.imageUrls.forEach(img => { %>
                  <img src="<%= img %>" alt="Image" width="50" class="mt-1 rounded" />
                  <% }) %>
                  <% } %>
                  <div id="images-submit_errors" class="validation-error"></div>
                </div>


                <!-- Description -->
                <div class="mb-3 col-md-12">
                  <label for="description">Description</label>
                  <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter description"><%= rental ? rental.description : '' %></textarea>
                </div>

                <div class="mb-2 ">
                  <h4>Availability (Monday - Sunday)</h4>
                </div>

                <div id="availability-wrapper">
                  <% ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"].forEach((day, i) => { 
                      let av = availabilities ? availabilities.find(a => a.day === day) : null; 
                  %>
                  <div class="row mb-2 availability-row">
                    <div class="col-md-2">
                      <label><%= day %></label>
                      <input type="hidden" name="availability[<%= i %>][day]" value="<%= day %>" />

                      <div class="form-check form-check-primary form-switch">
                        <input type="checkbox" name="availability[<%= i %>][status]" class="form-check-input" value="active" <%= av && av.status === 'active' ? 'checked' : '' %>>
                      </div>


                    </div>
                    <div class="col-md-2">
                      <label>Open Time</label>
                      <input type="time" class="form-control" name="availability[<%= i %>][open_time]" value="<%= av ? av.open_time : '' %>" />
                    </div>
                    <div class="col-md-2">
                      <label>Close Time</label>
                      <input type="time" class="form-control" name="availability[<%= i %>][close_time]" value="<%= av ? av.close_time : '' %>" />
                    </div>
                    <div class="col-md-2">
                      <label>Price</label>
                      <input type="number" class="form-control" name="availability[<%= i %>][price]" value="<%= av ? av.price : '' %>" />
                    </div>
                    <div class="col-md-2">
                      <label>Late Fees</label>
                      <input type="number" class="form-control" name="availability[<%= i %>][late_fees]" value="<%= av ? av.late_fees : '' %>" />
                    </div>
                  </div>
                  <% }) %>
                </div>


                <div class="mb-2">
                  <!-- Submit -->
                  <button type="submit" class="btn btn-primary mt-3">
                    <%= rental ? 'Update Rental' : 'Save Rental' %>
                  </button>
                </div>



              </div>
            </div>
          </div>





        </form>

      </div>

    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#submitForm').on('submit', function(e) {
      e.preventDefault();
      $('.validation-error').text('');

      const formData = new FormData(this);
      const rentalId = $('#rental_id').val();

      let url = '/admin/rentals';
      let method = 'POST';

      if (rentalId) { // editing
        url = '/admin/rentals/' + rentalId;
        method = 'PUT';
      }
      $('#form-loader').show();

      $.ajax({
        url: url,
        method: method,
        data: formData,
        processData: false,
        contentType: false,
        success: function(response) {
          $('#form-loader').hide();
          window.location.href = '/admin/rentals'; // redirect after save
        },
        error: function(res) {
          $('#form-loader').hide();
          if (res.status == 400 || res.status == 422) {
            if (res.responseJSON && res.responseJSON.errors) {
              var error = res.responseJSON.errors;
              $.each(error, function(key, value) {
                $("#" + key + "-submit_errors").text(value);
              });
            }
          }
          if (res.status == 500) {
            showErrorToast(res.responseJSON.error);
          }
          if (res.status == 404) {
            showErrorToast('Something went wrong');
          }
        }
      });
    });
  });
</script>